@using VendorAndOrder.Models;

<h1>@Model.Name</h1>
<h4>@Model.Description</h4>

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/categories/@Model["vendor"].Id/order/@order.Id'>@order.Description</a></li>
}
</ol>

<p><a href='/categories/@Model["vendor"].Id/order/new'>Add a new item</a></p>
<p><a href='/vendor'>Return to vendor list</a></p>